<div class="panel panel-default">
  <div class="panel-heading">
<h1>メッセージ一覧</h1>
  </div>
    
  <div class="panel-body">
<% @messages.each do |message| %>


<span class="label label-info"><%= message.name %></span>

<%= message.body %>
  <br>
<% end %>


<%= form_for(@message) do |f|  %>
<div class="form-group">
         名前:
         <div class="form-group">
         <%= f.text_area :name  %>
         </div>
         内容:
         <div class="form-group">
         <%= f.text_area :body  %>
         </div>
         <div class="form-group">
<%= f.submit %>
</div>
</div>
<% end %>
